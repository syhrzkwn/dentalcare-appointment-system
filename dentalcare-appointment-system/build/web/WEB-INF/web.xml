<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AuthRegister</servlet-name>
        <servlet-class>com.dentalcare.controller.AuthRegister</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthLogin</servlet-name>
        <servlet-class>com.dentalcare.controller.AuthLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthLogout</servlet-name>
        <servlet-class>com.dentalcare.controller.AuthLogout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountProfileUpdate</servlet-name>
        <servlet-class>com.dentalcare.controller.AccountProfileUpdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountPasswordUpdate</servlet-name>
        <servlet-class>com.dentalcare.controller.AccountPasswordUpdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountEmailUpdate</servlet-name>
        <servlet-class>com.dentalcare.controller.AccountEmailUpdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PatientUpdate</servlet-name>
        <servlet-class>com.dentalcare.controller.PatientUpdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DentistUpdate</servlet-name>
        <servlet-class>com.dentalcare.controller.DentistUpdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TreatmentCreate</servlet-name>
        <servlet-class>com.dentalcare.controller.TreatmentCreate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TreatmentUpdate</servlet-name>
        <servlet-class>com.dentalcare.controller.TreatmentUpdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TreatmentDelete</servlet-name>
        <servlet-class>com.dentalcare.controller.TreatmentDelete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthRegister</servlet-name>
        <url-pattern>/auth_register.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthLogin</servlet-name>
        <url-pattern>/auth_login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthLogout</servlet-name>
        <url-pattern>/auth_logout.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountProfileUpdate</servlet-name>
        <url-pattern>/account_profile_update.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountPasswordUpdate</servlet-name>
        <url-pattern>/account_password_update.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountEmailUpdate</servlet-name>
        <url-pattern>/account_email_update.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PatientUpdate</servlet-name>
        <url-pattern>/patient_update.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DentistUpdate</servlet-name>
        <url-pattern>/dentist_update.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TreatmentCreate</servlet-name>
        <url-pattern>/treatment_add.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TreatmentUpdate</servlet-name>
        <url-pattern>/treatment_update.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TreatmentDelete</servlet-name>
        <url-pattern>/treatment_delete.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
